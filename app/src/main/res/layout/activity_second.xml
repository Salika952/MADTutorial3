<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:background="@color/colorAccent">


    <Button
        android:id="@+id/add"
        android:layout_width="149dp"
        android:layout_height="39dp"
        android:text="+"
        android:textSize="24sp"
        android:background="#F1948A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.106"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.617" />

    <Button
        android:id="@+id/mult"
        android:layout_width="149dp"
        android:layout_height="39dp"
        android:text="*"
        android:textSize="24sp"
        android:background="#F1948A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.106"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.721" />

    <Button
        android:id="@+id/sub"
        android:layout_width="149dp"
        android:layout_height="39dp"
        android:text="-"
        android:textSize="24sp"
        android:background="#F1948A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.893"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.617" />

    <Button
        android:id="@+id/dev"
        android:layout_width="149dp"
        android:layout_height="39dp"
        android:text="/"
        android:textSize="24sp"
        android:background="#F1948A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.893"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.721" />

    <EditText
        android:id="@+id/secondeditText"
        android:layout_width="198dp"
        android:layout_height="36dp"
        android:layout_marginEnd="68dp"
        android:background="#FEF9E7"
        android:ems="10"
        android:textSize="24sp"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/secondeditText2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.577" />

    <EditText
        android:id="@+id/secondeditText2"
        android:layout_width="194dp"
        android:layout_height="37dp"
        android:layout_marginEnd="68dp"
        android:background="#FEF9E7"
        android:ems="10"
        android:textSize="24sp"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.356" />

    <TextView
        android:id="@+id/secondtextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FEF9E7"
        android:text="@string/number_1"
        android:textColor="#A93226"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/secondtextView2"
        app:layout_constraintEnd_toStartOf="@+id/secondeditText"
        app:layout_constraintHorizontal_bias="0.368"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.577" />

    <TextView
        android:id="@+id/secondtextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FEF9E7"
        android:text="@string/number_2"
        android:textColor="#A93226"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/secondeditText"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.36" />

    <TextView
        android:id="@+id/Result"
        android:layout_width="198dp"
        android:layout_height="48dp"
        android:background="#FEF9E7"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.671"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />


</androidx.constraintlayout.widget.ConstraintLayout>